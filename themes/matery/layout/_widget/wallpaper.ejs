<%
// the gallery photos of theme _config.yml.
var wallpaper = theme.myGallery.data;
%>
<div id="myGallery" class="my-gallery">
    <div class="title center-align" data-aos="zoom-in-up">
        <i class="fa fa-photo"></i>&nbsp;&nbsp;<%- __('wallpaper') %>
    </div>
    <div class="row">
        <% if (wallpaper) { %>
        <% Object.keys(wallpaper).forEach(function(photo) { %>
        <div class="photo col s12 m6 l4 img-zoom" data-aos="fade-up">
            <div class="img-item" data-src="<%- wallpaper[photo] %>">
                <img src="<%- wallpaper[photo] %>" class="responsive-img">
            </div>
        </div>
        <% }); %>
        <% } %>
    </div>
</div>

<script>
    $(function () {
        let animateClass = 'animated pulse';
        $('#myGallery .photo').hover(function () {
            $(this).addClass(animateClass);
        }, function () {
            $(this).removeClass(animateClass);
        });
    });
</script>
